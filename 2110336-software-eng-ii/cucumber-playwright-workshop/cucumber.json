{
  "default": {
    "dryRun": false,
    "format": [
      "progress-bar",
      ["json", "reports/cucumber-report.json"],
      ["html", "reports/html-formatter.html"]
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "parallel": 1,
    "paths": ["src/features/**/*.feature"],
    "require": ["src/step_definitions/**/*.ts", "src/utils/**/*.ts"],
    "requireModule": ["ts-node/register"]
  }
}
