package game;

/**
 * The ControlAction is the list of action that {@link Camera} can do.
 */
public enum ControlAction {
		/**
		 * Represent the movement of camera to the right.
		 */
		CAMERA_MOVE_RIGHT,
		
		/**
		 * Represent the movement of camera to the left.
		 */
		CAMERA_MOVE_LEFT,
		
		/**
		 * Represent the movement of camera to the down.
		 */
		CAMERA_MOVE_DOWN, 
		
		/**
		 * Represent the movement of camera to the up.
		 */
		CAMERA_MOVE_UP,
		
		/**
		 * Represent the movement of camera to the right.
		 */
		CAMERA_STAY_STILL,

}
