		return scale;
	}

	/**
	 * Sets the scale factor of sprites, components, and fonts.
	 *
	 * @param scale The scale factor.
	 */
	public static void setScale(int scale) {
		GameConfig.scale = scale;
	}

	/**
	 * Checks if the move animation should be skipped.
	 *
	 * @return True if the move animation should be skipped, false otherwise.
	 */
	public static boolean isSkipMoveAnimation() {
		return isSkipMoveAnimation;
	}

	/**
	 * Sets whether the move animation should be skipped or not.
	 *
